{
  "name": "slickgrid-universal",
  "private": true,
  "license": "MIT",
  "author": "Ghislain B.",
  "homepage": "https://github.com/ghiscoding/slickgrid-universal",
  "repository": {
    "type": "git",
    "url": "https://github.com/ghiscoding/slickgrid-universal.git"
  },
  "bugs": {
    "url": "https://github.com/ghiscoding/slickgrid-universal/issues"
  },
  "scripts": {
    "prebundle": "npm run lint",
    "bundle": "ws-runner run bundle --stream",
    "prebundle:zip": "npm run bundle",
    "bundle:zip": "ws-runner run bundle:zip --stream",
    "prebundle:with-tests": "npm run bundle",
    "bundle:with-tests": "npm run test",
    "build": "ws-runner run build --stream",
    "build:demo": "ws-runner run build:demo --stream",
    "rebuild": "run-s clean lint build --npm-path npm",
    "clean": "rimraf --maxBusyTries=10 packages/*/dist dist",
    "cypress": "cypress open --config-file test/cypress.json",
    "cypress:ci": "cypress run --config-file test/cypress.json",
    "dev:watch": "cross-env TSC_WATCHFILE=UseFsEventsWithFallbackDynamicPolling ws-runner run dev:watch --parallel",
    "clean:tsconfig-build-cache": "rimraf --maxBusyTries=10 packages/*/dist/tsconfig.tsbuildinfo",
    "roll-version": "ws-roller version --conventional-commits",
    "roll-publish": "ws-roller publish --bump from-package --registry=https://registry.npmjs.org/",
    "prepublishOnly": "ws-runner run package:remove-browser-prop",
    "postroll-publish": "ws-runner run package:add-browser-prop",
    "serve:demo": "serve ./docs -l 8888",
    "lint": "eslint packages/** --ext .ts",
    "test": "jest --runInBand --coverage=true --config ./test/jest.config.js",
    "test:ci": "jest --runInBand --coverage=true --ci --config ./test/jest.config.js",
    "test:watch": "cross-env TZ='America/New_York' jest --watch --config ./test/jest.config.js"
  },
  "comments": {
    "roll-new-version": "To create a new version with ws-roller, run the following scripts (1) 'bundle', (2) 'roll-version' and (3) 'roll-publish' to send it over to NPM."
  },
  "workspaces": {
    "packages": [
      "examples/*",
      "packages/*"
    ],
    "nohoist": [
      "**/mocha",
      "**/mocha/**",
      "**/jest",
      "**/jest/**",
      "**/cypress",
      "**/cypress/**"
    ]
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.17",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "@lerna-lite/cli": "^0.3.0",
    "@lerna-lite/run": "^0.3.0",
    "cypress": "^9.4.1",
    "eslint": "^8.8.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "jest": "^27.5.1",
    "jest-cli": "^27.5.1",
    "jest-environment-jsdom": "^27.5.1",
    "jest-extended": "^2.0.0",
    "jsdom": "^19.0.0",
    "jsdom-global": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "rxjs": "^7.5.2",
    "serve": "^13.0.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=16.11.0",
    "npm": ">=8.0.0"
  }
}